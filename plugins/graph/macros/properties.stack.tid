    <$transclude $variable=$properties.stack.recurse $fillignore=yes nth={{{ [<nth>add[1]] }}} />
  </$properties>
<%else%>
  <$slot $name=ts-raw />
<%endif%>
\end $properties.stack.recurse
\whitespace trim

<$transclude $variable=$properties.stack.recurse nth=1 $fillignore=yes />

\end

